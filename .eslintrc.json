{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": [1, 4],
        "no-console": "off",
        "no-multiple-empty-lines": ["error", { "max": 1, "maxEOF": 0 }],
        "no-trailing-spaces": ["error", { "skipBlankLines": true, "ignoreComments": true }],
        "eqeqeq": "off",
        "quotes": ["error", "double"],
        "linebreak-style": "off",
        "no-unused-vars": "off",
        "max-len": ["error", { "code": 150 }],
        "spaced-comment": "off",
        "no-param-reassign": "off"
    }
}
